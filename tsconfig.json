{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDirs": ["./src"], 
    "jsx": "react",
    "module": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "lib": ["es6", "dom"],
  },
  "files": ["src/globals.d.ts"],
  "exclude": [
    "lib",
    "node_modules",
    "dist",
    "src/**/*.stories.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/globals.d.ts",
  ]
}